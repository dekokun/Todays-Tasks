li
  - if(todo.nice == undefined)
    nice = 0
  - else
    nice = todo.nice
  - if(todo.completed)
    submit_value = '未完了'
    button_value = false
    p
      del.diagonally.leftUp= todo.title
    p.completed 完了!
  - else
    submit_value = '完了'
    button_value = true
    p= todo.title 
  p= todo.description
  .form-group
    form(action='/todo/'+todo._id, method= 'POST')
      input(type='hidden', name='_method', value='delete')
      i.icon-trash
      input.btn.btn-mini.btn-danger(type= 'submit', value='削除')
    form(action='/todo/'+todo._id, method= 'POST')
      input(type='hidden', name='_method', value='put')
      input(type='hidden', name='completed', value="#{button_value}")
      i.icon-ok
      input.btn.btn-mini.btn-success(type= 'submit', value="#{submit_value}")
    form(action='/todo/'+todo._id+'/nice', method= 'POST')
      input(type='hidden', name='_method', value='put')
      i.icon-star
      input.btn.btn-mini.btn-info(type= 'submit', value="#{nice} いいね!")
