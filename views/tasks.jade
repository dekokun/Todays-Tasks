article
  header
    h1= title
  section
    h2 Task一覧
    ul
      - tasks.forEach(function(task){
        li
          a(href= task.url)= task.title
          p= task.description
      - })

  section
    h2 新規Task
    form(action='/', method= 'POST')
      dl
        dt タスク名
        dd
          input(name= 'title')
        dt 説明
        dd
          input(name= 'description')
        dt URL
        dd
          input(name= 'url')
      input(type= 'submit')

  footer
    a(href '/') メインページ
