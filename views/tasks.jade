article
  header
    h1= title
  section
    h2 Task一覧
    ul
      - tasks.forEach(function(task){
        li
          form(action='/task/'+task._id, method= 'POST')
            a(href= task.url)= task.title
            p= task.description
            input(type='hidden', name='_method', value='delete')
            input(type= 'submit', value='削除')
      - })

  section
    h2 新規Task
    form(action='/task', method= 'POST')
      dl
        dt タスク名
        dd
          input(name= 'title')
        dt 説明
        dd
          input(name= 'description')
        dt URL
        dd
          input(name= 'url')
      input(type= 'submit')

  footer
    a(href '/') メインページ
